<Page x:Class="Time_Management_App.Capture"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Time_Management_App"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Capture">

    <Grid>
        <Grid Grid.Column="1" Margin="30 20 20 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel>

                <!--Page Title-->
                <TextBlock Text="Please Enter for your Modules:" Grid.Row="1"
                           FontSize="32" FontWeight="SemiBold" Margin="0 35 0 0"
                           HorizontalAlignment="Left" Foreground="#121518"/>


                <!--<Separator Height="1" Grid.Row="3" Background="#dae2ea" Margin="0 -1 0 10"/>

                <TextBlock Text="Number of weeks for the Semester:" FontSize="14" Margin="0 5 0 0"/>
                <TextBox x:Name="txtNumOfWeeks" PreviewTextInput="NumOnly" Margin="0 15 480 20" 
                         Style="{StaticResource txtboxInput}"/>

                <TextBlock Text="Start Date:" FontSize="14" Margin="0 5 0 0"/>
                <DatePicker x:Name="dateStart" Width="250" Height="25" HorizontalAlignment="Left" Margin="0 5 480 0"/>

                <Button x:Name="btnEnter" Style="{StaticResource menuButton}" Width="110"
                        VerticalAlignment="Bottom" HorizontalAlignment="Left" DockPanel.Dock="Bottom"
                        Margin="15 10 15 20" Click="btnEnter_Click">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Enter"/>
                    </StackPanel>
                </Button>-->

                <Separator Height="1" Grid.Row="4" Background="#dae2ea" Margin="0 -1 0 10"/>

                <TextBlock Text="Code:" FontSize="14" Margin="0 10 0 0"/>
                <TextBox x:Name="txtCode" Margin="0 10 480 20" Style="{StaticResource txtboxInput}" ToolTip="Enter the module code"/>

                <TextBlock Text="Name:" FontSize="14" Margin="0 5 0 0"/>
                <TextBox x:Name="txtName" Margin="0 15 480 20" Style="{StaticResource txtboxInput}" ToolTip="Enter the module name"/>

                <TextBlock Text="Credit:" FontSize="14" Margin="0 5 0 0"/>
                <TextBox x:Name="txtCredits" PreviewTextInput="NumOnly" Margin="0 15 480 20" Style="{StaticResource txtboxInput}" ToolTip="Enter the module credit value"/>

                <TextBlock Text="Hours per Week:" FontSize="14" Margin="0 5 0 0"/>
                <TextBox x:Name="txtHours" PreviewTextInput="NumOnly" Margin="0 15 500 20" Style="{StaticResource txtboxInput}" ToolTip="Enter the number of hours per week for the module"/>

                <Button x:Name="btnCapture" Style="{StaticResource menuButton}" Width="110" 
                        VerticalAlignment="Bottom" HorizontalAlignment="Left" DockPanel.Dock="Bottom"
                        Margin="15 0 15 20"  Click="btnCapture_Click" ToolTip="Click to submit your module">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Capture"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnGetModuleCodes" Style="{StaticResource menuButton}" Width="110" 
                        VerticalAlignment="Bottom" HorizontalAlignment="Left" DockPanel.Dock="Bottom"
                        Margin="15 0 15 20"  Click="btnGetModuleCodes_Click" ToolTip="Takes you to Varsity College to get the module details">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Link" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Find Info"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
