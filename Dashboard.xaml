<Page x:Class="Time_Management_App.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:Time_Management_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="Dashboard">

    <Grid>
        <!--Main Section-->
        <Grid Grid.Column="1" Margin="30 20 20 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Page Title-->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Modules" Grid.Row="1" FontSize="32" FontWeight="SemiBold" Margin="0 30 0 0"
                           HorizontalAlignment="Left" Foreground="#121518"/>

                <Button x:Name="btnDelete" Style="{StaticResource menuButton}" Width="110" 
                        VerticalAlignment="Bottom" HorizontalAlignment="Left" DockPanel.Dock="Bottom"
                        Margin="180 35 0 20"  Click="btnDelete_Click" ToolTip="Select row before deleting">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Delete" Style="{StaticResource menuButtonIcon}"/>
                        <TextBlock Text="Delete"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Separator Height="1" Grid.Row="3" Background="#dae2ea" Margin="0 -1 0 10"/>

            <!--Datagrid-->
            <DataGrid HorizontalAlignment="Center" 
                      Name="modulesDataGrid" 
                      VerticalAlignment="Top"
                      Grid.Row="5"
                      Width="1100"
                      ColumnWidth="*"
                      MinRowHeight="25"
                      FontSize="16"
                      IsReadOnly="True"/>

            <!--Search Textbox-->
            <!--
            <Grid Width="300" HorizontalAlignment="Left" Grid.Column="1" VerticalAlignment="Top">
                <TextBlock x:Name="txtbSearch" Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                           Panel.ZIndex="1" Text="Search Code Here ..."
                           Visibility="Hidden"/>

                <TextBox x:Name="txtSearch" Style="{StaticResource txtboxSearch}"
                         Visibility="Hidden"/>
                <Icon:PackIconMaterial x:Name="iSearch" Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                                       Margin="0 0 15 0" Foreground="#b0b9c6" HorizontalAlignment="Right"
                                       Visibility="Hidden"/>
            </Grid>-->
        </Grid>
    </Grid>
</Page>
